    {{#if isDekaDir}}
        // Скрипты страницы, если это декан и/или директор
        $(document).ready(function() {
            $('#uploadForm').submit(function(e) {
                e.preventDefault(); // Предотвращаем отправку формы по умолчанию

                var formData = new FormData(this);

                $.ajax({
                    url: '/upload', // URL, куда отправляется запрос
                    type: 'POST', // Метод запроса
                    data: formData,
                    processData: false, // Не обрабатывать данные перед отправкой
                    contentType: false, // Не устанавливать Content-Type заголовок
                    success: function(response) {
                        alert('Файл успешно загружен');
                    },
                    error: function(xhr, status, error) {
                        alert('Ошибка загрузки файла: ' + error);
                    }
                });
            });
        });
    {{/if}}

