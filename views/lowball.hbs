<body>
    
    <div class="overlay content" id="modal-2">
        <form method="post">
		    <div class="contentoverlay">
                <div class="popap">
                    <table id = 'sf' class="centered highlight searchable-table">
                        <input class="search-input" type="text" placeholder="Поиск значения" id="search-text">
                            <thead>
                                <tr>
                                    <th><center>ФИО</center></th>
                                    <th><center>Должность</center></th>
                                    <th><center>Номер ЭК</center></th>
                                    <th><center>Добавить Понижающие показатели</center></th>
                                </tr>
                            </thead>
                        {{#each lowBallData}}
                        <tbody>
                            <tr>
                                <td>{{this.last_name}} {{this.name_real}} {{this.patronymic}}</td>
                                <td>{{this.position}}</td>
                                <td>{{this.id_ek}}</td>
                                <td><center><a href="" class="floating-button">Добавить</a></center></td>
                            </tr>
                        </tbody>
                        {{/each}}
                    </table>
                </div>
		    </div>
        </form>
	</div>
</body>