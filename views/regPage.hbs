{{!-- <h1>
    Страница регистрации пользователей
</h1> --}}
<div class="form-win" id="modal-3">
    <h3>Регистрация пользователей</h3>
        <form class="col s12" method="post" action="/register">
            <div class="input-field" data-validate="Введите фамилию">
                    <input class="" type="text" name="lastname" id="lastname" placeholder="Фамилия">
                    <label for="lastname">Введите фамилию</label>
                    <span class="" data-placeholder="&#xe82a;"></span>
            </div>
            <div class="input-field" data-validate="Введите имя">
                    <input class="" type="text" name="firstname" id="firstname" placeholder="Имя">
                    <label for="firstname">Введите имя</label>
                    <span class="" data-placeholder="&#xe82a;"></span>
            </div>
            <div class="input-field" data-validate="Введите отчество">
                    <input class="" type="text" name="patronymic" id="patronymic" placeholder="Отчество">
                    <label for="patronymic">Введите отчество</label>
                    <span class="" data-placeholder="&#xe82a;"></span>
            </div>

            <div class="input-field">
                <section>
                    <label>Выберите должность</label>
                    <select name="position">
                            <option value="" disabled selected>Должность</option>
                            {{#each positionList}}
                                <option value="{{this.position}}">{{this.position}}</option>
                            {{/each}}
                    </select>
                    
                </section>                 
            </div>

            <div class="input-field" data-validate="Введите ставку">
                        <input class="" type="text" name="stavka" id="stavka" placeholder="Ставка">
                        <label for="stavka">Введите ставку</label>
                        <span class="" data-placeholder="&#xe82a;"></span>
            </div>
            <div class="input-field">
                <section>
                        <label class="">Выберите факультет:</label>
                        <select class="" name="department">
                            <option value="" disabled selected>Факультет</option>
                            {{#each departmentList}}
                                <option value="{{this.department}}">{{this.department}}</option>
                            {{/each}}
                        </select>
                </section>
            </div>
                        
            <div class="input-field" data-validate="Введите почту">
                    <input class="" type="text" name="username" id="mail" placeholder="Почта">
                    <label for="mail">Введите почту</label>
                    <span class="" data-placeholder="&#xe82a;"></span>
            </div>
            <div class="input-field" data-validate="Введите пароль">
                    <input class="" type="password" name="password" id="pass" placeholder="Пароль">
                    <label for="pass">Введите пароль</label>
                    <span class="" data-placeholder="&#xe80f;"></span>
            </div>
            <div class="">
                    <button class="waves-effect waves-light btn" type="submit">Зарегистрировать</button>
            </div>
        </form>


</div>